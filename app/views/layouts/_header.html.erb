<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg">
    <div class="container">


      <!-- ロゴ　-->
      <div class="border navbar-brand">
        <% if admin_signed_in? %>
          <%= link_to "nagano CAKE", admin_root_path, class: "mx-2" %>
        <% else %>
          <%= link_to "nagano CAKE", root_path, class: "mx-2" %>
        <% end %>
      </div>

      <div class="flex-column">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if customer_signed_in? %>
            <!-- 顧客ログイン時 -->
            <li>
              <span>ようこそ、<%= current_customer.family_name %>さん！</span>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "マイページ", customers_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "商品一覧", items_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "カート", cart_items_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
            </li>

          <% elsif admin_signed_in? %>
            <!-- 管理者ログイン時 -->
            <li class="border rounded mx-2">
              <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "注文履歴一覧", orders_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
            </li>

          <% else %>
            <!-- ログインしていない時 -->
            <li class="border rounded mx-2">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "商品一覧",  items_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2">
              <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
            </li>
            <li class="border rounded mx-2 mr-auto">
              <%= link_to "ログイン", customer_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>

        <!-- 検索フォーム-->
        <form class="form-inline my-2 float-right">
          <input class="form-control mr-sm-2" type="search" placeholder="検索" aria-label="Search">
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">検索</button>
        </form>
      </div>
    </div>
  </nav>
</header>
