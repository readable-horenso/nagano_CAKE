<header>
  <div class="container">
    <div class="row">
      <!-- ロゴ　-->
      <nav>
        <% if admin_signed_in? %>
          <%= link_to "nagano CAKE", admin_root_path %>
        <% else %>
          <%= link_to "nagano CAKE", root_path %>
        <% end %>
      </nav>

      <ul>
        <% if customer_signed_in? %>
        <!-- 顧客ログイン時 -->
        <li>
          ようこそ、<%= current_customer.family_name %>さん！
        </li>
        <li class="nav-item">
          <%= link_to "マイページ", customers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", admin_items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "カート", cart_items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_customer_session_path %>
        </li>

        <% elsif admin_signed_in? %>
        <!-- 管理者ログイン時 -->
        <li class="nav-item">
          <%= link_to "商品一覧", admin_items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "会員一覧", admin_customers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "注文履歴一覧", orders_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ジャンル一覧", admin_genres_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_admin_session_path %>
        </li>

        <% else %>
        <!-- ログインしていない時 -->
        <li class="nav-item">
          <%= link_to "About", about_path %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧",  admin_items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", customer_session_path %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
