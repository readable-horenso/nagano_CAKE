<div>
  <%= render 'layouts/flash_message' %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h1 class="mb-5">顧客一覧</h1>

      <div class="col-md-10">
        <table class="table text-center">
          <thead class="table table-secondary">
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <ins>
                  <%= link_to admin_customer_path(customer), class: "text-dark" do %>
                    <%= customer.family_name + customer.given_name %>
                  <% end %>
                </ins>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <span class="text-success font-weight-bold">
                    <%= '有効' %>
                  </span>
                <% else %>
                  <span class="text-secondary font-weight-bold" style='display: flex; justify-content: center;'>
                    <%= '退会' %>
                  </span>
              　<% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>