<!--ヘッダーのパーシャル-->

  <%= render 'layouts/flash_message' %>

<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-lg-10'>

      <h2 class='mb-5'>ジャンル一覧・追加</h2>

      <%= render partial: 'genre_form', locals: {     form_url: admin_genres_path,
                                              button_label: '新規登録'} %>

      <div class='row justify-content-center'>
        <div class='col-6'>
        <table class='table text-center'>
          <thead class='table table-secondary'>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </div>
      </div>

      <div class='row justify-content-center'>
        <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
      </div>

    </div>
  </div>
</div>

