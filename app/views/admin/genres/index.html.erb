<!--ヘッダーのパーシャル-->

<div class='container'>

<div class='row'>
  <h2 class='display-8'>ジャンル一覧・追加</h2>
</div>

  <%= render partial: 'genre_form', locals: {     form_url: admin_genres_path,
                                              button_label: '新規登録'} %>

<div class='row'>
  <table class='table text-center'>
    <thead class='table table-secondary'>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>

</div>

