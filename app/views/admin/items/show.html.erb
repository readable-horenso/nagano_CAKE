<%= render 'layouts/flash_message' %>

<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-lg-10'>

      <h1 class='mb-5'>商品詳細</h1>

      <div class='row'>
        <div class='col-md-3'>
          <%= image_tag @item.image, size:'150x100', class: "rounded shadow" %>
        </div>

        <div class='col-md-7'>
          <table class='table'>
            <thead class='table'>
              <tbody>
                <tr>
                  <td>商品名</td>
                  <td><%= @item.name %></td>
                </tr>
                <tr>
                  <td>商品説明</td>
                  <td><%= @item.description %></td>
                </tr>
                <tr>
                  <td>ジャンル</td>
                  <td><%= @item.genre.name %></td>
                </tr>
                <tr>
                  <td>税込価格<br>
                     (税抜価格)</td>
                  <td style='vertical-align: middle'><%= @item.with_tax_price.to_s(:delimited) %>
                     (<%= @item.price.to_s(:delimited) %>) 円</td>
                </tr>
                <tr>
                  <td>販売ステータス</td>
                  <td><% if @item.is_valid %>
                        <span class='text-success font-weight-bold'>
                          <%= '販売中' %>
                        </span>
                      <% else %>
                        <span class='text-secondary font-weight-bold'>
                          <%= '販売停止中' %>
                        </span>
                      <% end %></td>
                </tr>
              </tbody>
            </thead>
          </table>

          <div class='row justify-content-center'>
            <%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-success btn-lg item_edit' %>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>
