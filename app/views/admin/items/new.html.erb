<!--ヘッダーのパーシャル-->

<h1>商品新規登録</h1>
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

    <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>

    <h4>商品名</h4>
      <%= f.text_field :name %>

    <h4>商品説明</h4>
      <%= f.text_area :description %>

    <h4>ジャンル</h4>
      <!--ジャンル未定義-->
      <%#= f.collection_select : %>
      <%= f.text_field :genre_id %>

    <h4>税抜価格</h4>
      <%= f.number_field :price %>

    <h4>販売ステータス</h4>
      <%= f.radio_button :is_valid, true %>
      <%= f.label :is_valid, '販売中', value: true %>

      <%= f.radio_button :is_valid, false %>
      <%= f.label :is_valid, '販売停止中', value: false %>

    <%= f.submit '新規登録' %>
  <% end %>

