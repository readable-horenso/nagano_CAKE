<h1>Public::Items#show</h1>
<p>Find me in app/views/public/items/show.html.erb</p>

<div class="container">
  <div class="row">

    <div class="col-4">

    <!--ジャンル-->

    </div>

    <div class="col-8">

      <div><%#= @item.image, size: "100x150" %></div>
      <p><%#= @item.name %></p>
      <p><%#= @item.description %></p>
      <p><%#= (@item.price * 1.1).floor %></p>

      <!--カートアイテムへのフォーム-->
      <%= form_with model: CartItem.new, local: true do |f| %>
      <div class="form-group">
        <%= f.select :quantity, *[1..10], include_blank: "個数選択", class: "form-select" %>

        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
      <% end %>

    </div>

  </div>
</div>