<div class="container">
  <h3>注文履歴一覧</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= order.postcode %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_details| %>
              <%= order_details.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_amount %>円</td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
