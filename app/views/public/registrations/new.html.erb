<div><%= render 'layouts/flash_message' %></div>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="mb-5 nav">
        <h3>新規会員登録</h3>
      </div>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
　　
　<form>　
    <div class="row mb-3 form-group">
      <label class="col col-form-label">お名前</label>
        <span>（姓）</span>&nbsp;
        <div class="col-sm-9">
          <%= f.text_field :family_name, placeholder: "令和", required: true %>
            <span>（名）</span>&nbsp;
            <%= f.text_field :given_name, placeholder: "道子", required: true %>
        </div>
    </div>
    
    <div class="row mb-3 form-group">
      <label class="col col-form-label">フリガナ</label>
        <span>（セイ）</span>&nbsp;
        <div class="col-sm-9">
          <%= f.text_field :family_name_kana, placeholder: "レイワ", required: true %>
            <span>（メイ）</span>&nbsp;
            <%= f.text_field :given_name_kana, placeholder: "ミチコ", required: true %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col col-form-label">メールアドレス</label>
        <div class="col-sm-9">
          <%= f.email_field :email, :size=>40, placeholder: "sample@example.com", required: true %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col col-form-label">郵便番号</label>
        <div class="col-sm-9">
          <%= f.text_field :postcode, placeholder: "0000000", required: true %>
        </div>
    </div>
    
    <div class="row form-group">
        <label class="col col-form-label">住所</label>
        <div class="col-sm-9">
          <%= f.text_field :address, size: "40", placeholder: "東京都渋谷区代々木神園町0-0", required: true %>
        </div>
    </div>

  <div class="row form-group">
    <label class="col col-form-label">電話番号</label>
    <div class="col-sm-9">
    <%= f.text_field :phone_number, placeholder: "000000000", required: true %>
    </div>
  </div>
  
  <div class="row form-group">
    <label class="col col-form-label">パスワード
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </label>
    <div class="col-sm-9">
      <%= f.password_field :password, required: true %>
    </div>
  </div>
  
  <div class="row form-group">
    <label class="col col-form-label">パスワード（確認用）</label>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, required: true %>
    </div>
  </div>
  
  <div class="text-center my-3 col-8 form-group">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  </form>
  <% end %>

  <div class="nav">
      <h3>既に登録済みの方</h3>
  </div>
  <div class="row">
    <div class="h4 col-7 mb-3 mx-auto">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>

