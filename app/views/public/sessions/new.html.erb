<div class="container">
  <nav class="navber navber-default">
    <div class="navber-header">
      <h2>ログイン</h2>
    </div>
    <h4>会員の方はこちらからログイン</h4>
  </nav>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form class="form-horizontal">
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">メールアドレス</label>
      <div class="col-sm-9">
        <div class="row">
          <div class="col-sm">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">パスワード</label>
      <div class="col-sm-9">
        <div class="row">
          <div class="col-sm">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group text-center my-3 col-8">
      <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>
  </form>

  <div class="navber">
    <h4>会員登録がお済みでない方</h4>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>