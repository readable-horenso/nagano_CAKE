<div class="container">
  <div class="row">
    <div class="col-sm-14 col-md-10 col-lg-7 px-7 px-sm-2 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
        <div class="form-group form-inline">
          <label class="control-label">名前</label>
          <%= f.text_field :family_name, class: "form-control family_name" %>&nbsp;
          <%= f.text_field :given_name, class: "form-control given_name" %>
        </div>
        <div class="form-group form-inline">
          <label class="control-label">フリガナ</label>
          <%= f.text_field :family_name_kana, class: "form-control family_name_kana" %>&nbsp;
          <%= f.text_field :given_name_kana, class: "form-control given_name_kana" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :postcode, "郵便番号" %>
          <%= f.text_field :postcode, class: "form-control postcode" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control address", :size=>60 %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :phone_number, "電話番号" %>
          <%= f.text_field :phone_number, class: "form-control phone_number" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
